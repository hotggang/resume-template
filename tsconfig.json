{
  "compilerOptions": {
    "target": "ES2020", // 타입스크립트파일을 어떤 버전의 자바스크립트로 바꿔줄지 정하는 부분
    "useDefineForClassFields": true,
    "module": "ESNext", // 자바스크립트 파일간 import 문법을 구현할 때 어떤 문법을 쓸 지 정하는 곳
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "declaration": true,  // 컴파일 시 .d.ts 파일도 자동으로 함께 생성 (현재 쓰는 모든 타입이 정의된 파일)

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false, // any타입 금지 여부
    "noImplicitReturns": true, // 함수에서 return 빼먹으면 에러
    "noFallthroughCasesInSwitch": true, // switch문 이상하면 에러
    "strictFunctionTypes": true,// 함수 파라미터 체크 강하게
    "strictNullChecks": true, // null, undefined 타입 확인
  },
  "include": ["src/**/*"]
}
